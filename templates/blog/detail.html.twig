{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if article.date|date('U') >= "now"|date_modify('-7 days')|date('U') %}
        {
            <a href="https://www.flaticon.com/fr/icones-gratuites/honneurs" title="honneurs icônes">Honneurs icônes créées par smashingstocks - Flaticon</a> ; 
        }
    {% endif %}

    {{article|slice(0,1)}}

    {% set mois = [
        "janvier", "février", "mars", "avril", "mai", "juin",
        "juillet", "août", "septembre", "octobre", "novembre", "décembre"
    ] %}

    <h1>{{article.titre|upper}} </h1>
    <h3> De {{article.auteur}}</h3>
    <p>{{article.contenue}}</p>
    <p> Le {{ article.date|date("d") }} {{ mois[article.date|date("n") -1] }} {{ article.date|date("Y") }}</p>
</div>
{% endblock %}